# Production Environment Configuration
# Copy this file to .env.production in your project root

# Environment
NODE_ENV=production

# Server Configuration
PORT=3001
HOST=0.0.0.0
CORS_ORIGINS=https://spaceweirdos.com,https://www.spaceweirdos.com
STATIC_PATH=dist
DATA_PATH=data
WARBAND_DATA_PATH=data/warbands.json
ENABLE_AUTO_SAVE=true

# API Configuration (REQUIRED for production)
VITE_API_URL=https://api.spaceweirdos.com/api
API_MAX_RETRIES=3
API_RETRY_DELAY_MS=1000
API_TIMEOUT_MS=10000

# Cache Configuration (Production - longer TTLs for performance)
CACHE_DEFAULT_MAX_SIZE=100
CACHE_DEFAULT_TTL_MS=300000
CACHE_ITEM_COST_SIZE=200
CACHE_ITEM_COST_TTL=600000
CACHE_COST_CALC_SIZE=100
CACHE_COST_CALC_TTL=300000
CACHE_VALIDATION_SIZE=50
CACHE_VALIDATION_TTL=900000
CACHE_API_RESPONSE_SIZE=100
CACHE_API_RESPONSE_TTL=300000

# Cost Configuration
POINT_LIMIT_STANDARD=75
POINT_LIMIT_EXTENDED=125
POINT_LIMIT_WARNING_THRESHOLD=0.9
TROOPER_LIMIT_STANDARD=20
TROOPER_LIMIT_MAXIMUM=25
TROOPER_SPECIAL_SLOT_MIN=21
TROOPER_SPECIAL_SLOT_MAX=25
EQUIPMENT_LIMIT_LEADER_STANDARD=2
EQUIPMENT_LIMIT_LEADER_CYBORGS=3
EQUIPMENT_LIMIT_TROOPER_STANDARD=1
EQUIPMENT_LIMIT_TROOPER_CYBORGS=2
DISCOUNT_MUTANT=1
DISCOUNT_HEAVILY_ARMED=1

# Validation Configuration
VALIDATION_COST_WARNING_THRESHOLD=0.9
VALIDATION_CONTEXT_AWARE_WARNINGS=true
VALIDATION_STRICT_MODE=false

# Environment Configuration (Production)
LOG_LEVEL=info
DEBUG_ENABLED=false
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_DETAILED_ERRORS=false

# File Operations Configuration
FILE_MAX_SIZE_BYTES=10485760
FILE_ALLOWED_TYPES=application/json,.json
FILE_MAX_FILENAME_LENGTH=255
FILE_ENABLE_SANITIZATION=true
FILE_OPERATION_TIMEOUT_MS=30000

# Security Note: In production, consider:
# - Using specific CORS origins instead of wildcards
# - Setting up proper SSL/TLS certificates
# - Configuring firewall rules
# - Using environment-specific secrets management
# - Enabling request rate limiting
# - Setting up monitoring and alerting